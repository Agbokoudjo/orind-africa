{% block user_block %}
{% set user = app.user  %}
  {% set _logout_uri = url('sonata_user_admin_security_logout') %}
   {% set _logout_text = 'user_block_logout'|trans({}, 'SonataUserBundle') %}
   <a href="#" class="nav-link dropdown-toggle text-decoration-none" data-bs-toggle="dropdown">
        <img
            src="{{asset('images/profile/super_admin.jpg')}}"
            class="user-image rounded-circle shadow"
            alt="User Image"
        />
        <span class="d-none d-md-inline user-identify">{{user.username}}</span>
          </i> <i class="fas fa-caret-down" aria-hidden="true"></i>
    </a>  
    <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-end">
         <li class="user-header text-bg-primary">
            <img
                src="{{asset('images/profile/super_admin.jpg')}}"
                class="rounded-circle shadow"
                alt="User Image"
                />
            <p>{{user.username}} <br>
            <button class="btn"> {{ user.rolePrincipal|trans({},'role',app.locale) }}</button>
               {# createdAt vient de Doctrine: \DateTimeImmutable stock√© en UTC #}
                {% set createdAt = user.createdAt|date('c') %}
                <small>
                   {{ 'member.since'|trans({},'user',app.locale) }}
                    <span 
                        {{ stimulus_controller('date',{'date':createdAt,'locale':app.locale}) }}
                    ></span>
                </small>
            </p>
        </li>
        <li class="user-body">
            <div class="row">
                <div class="col-4 text-center">
                    <a href="#">Followers</a>
                </div>
                <div class="col-4 text-center">
                    <a href="#">Sales</a>
                </div>
                <div class="col-4 text-center">
                    <a href="#">Friends</a>
                </div>
            </div>
        </li>
         <li class="user-footer">
            <a href="#" class="btn btn-default btn-flat"><i class="fas fa-user"></i> {{ 'user_block_profile'|trans({}, 'SonataUserBundle') }}</a>
            <a href="{{ _logout_uri }}" class="btn btn-default btn-flat float-end">
                <i class="fas fa-sign-out-alt fa-fw"></i>
                    {{ _logout_text }}
            </a>
        </li>
    </ul>         
{% endblock %}